<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginStart="100dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="88dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvnomLivrefixe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Nom :"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvnomLivre"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Nom du livre"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvnomAuteurfixe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Auteur :"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvnomAuteur"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Nom de l'auteur"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvdateParutionfixe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Date de parution :"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvdateParution"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="00/00/0000"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/tvimage"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginVertical="18dp"

        android:layout_marginStart="6dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageButton
        android:id="@+id/ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="85dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:tint="#6FAC71"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:ignore="UseAppTint" />

</androidx.cardview.widget.CardView>